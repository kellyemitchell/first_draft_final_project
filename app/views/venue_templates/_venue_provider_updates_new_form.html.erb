<form action="/create_provider_update_from_venue" method="post">

  <div class="form-group">
    <label for="breakfast">
      Breakfast
    </label>

    <input type="text" id="breakfast" name="breakfast" class="form-control" value="<%= @provider_update.breakfast %>">
  </div>

  <div class="form-group">
    <label for="lunch">
      Lunch
    </label>

    <input type="text" id="lunch" name="lunch" class="form-control" value="<%= @provider_update.lunch %>">
  </div>

  <div class="form-group">
    <label for="snacks">
      Snacks
    </label>

    <input type="text" id="snacks" name="snacks" class="form-control" value="<%= @provider_update.snacks %>">
  </div>

  <div class="form-group">
    <label for="activities">
      Activities
    </label>

    <input type="text" id="activities" name="activities" class="form-control" value="<%= @provider_update.activities %>">
  </div>

  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :email, @provider_update.user_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="date">
      Date
    </label>

    <input type="text" id="date" name="date" class="form-control" value="<%= @provider_update.date %>">
  </div>

  <div class="form-group">
    <label for="reminders">
      Reminders
    </label>

    <input type="text" id="reminders" name="reminders" class="form-control" value="<%= @provider_update.reminders %>">
  </div>

  <input type="hidden" name="venue_id" value="<%= @venue.id %>">

  <button class="btn btn-block btn-outline-secondary">
    Create provider update
  </button>
</form>
