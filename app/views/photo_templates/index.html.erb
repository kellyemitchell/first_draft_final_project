<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All photos
    </h1>

    <a href="/photos/new" class="btn btn-block btn-outline-secondary">
      Add a new photo
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Date
        </th>

        <th>
          Caption
        </th>

        <th>
          Venue
        </th>

        <th>
          Photo location
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @photos.each do |photo| %>
      <tr>
        <!-- Display photo.id start -->
        <td>
          <%= photo.id %>
        </td>
        <!-- Display photo.id end -->

        <!-- Display photo.user_id start -->
        <td>
          <% if photo.user.present? %>
            <a href="/users/<%= photo.user.id %>">
              <%= photo.user.email %>
            </a>
          <% end %>
        </td>
        <!-- Display photo.user_id end -->

        <!-- Display photo.date start -->
        <td>
          <%= photo.date %>
        </td>
        <!-- Display photo.date end -->

        <!-- Display photo.caption start -->
        <td>
          <%= photo.caption %>
        </td>
        <!-- Display photo.caption end -->

        <!-- Display photo.venue_id start -->
        <td>
          <% if photo.venue.present? %>
            <a href="/venues/<%= photo.venue.id %>">
              <%= photo.venue.name %>
            </a>
          <% end %>
        </td>
        <!-- Display photo.venue_id end -->

        <!-- Display photo.photo_location start -->
        <td>
          <%= photo.photo_location %>
        </td>
        <!-- Display photo.photo_location end -->

        <!-- Display photo.created_at start -->
        <td>
          <%= time_ago_in_words(photo.created_at) %> ago
        </td>
        <!-- Display photo.created_at end -->

        <!-- Display photo.updated_at start -->
        <td>
          <%= time_ago_in_words(photo.updated_at) %> ago
        </td>
        <!-- Display photo.updated_at end -->

        <td>
          <a href="/photos/<%= photo.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @photos, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
