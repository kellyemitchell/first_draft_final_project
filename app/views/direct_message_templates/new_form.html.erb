<h1>
  Add a new direct message
</h1>


<hr>

<!-- Form direct_message start -->
<form action="/create_direct_message" method="post">
<!-- Form direct_message end -->

  <!-- Label and input for sender_id start -->
  <div class="form-group">
    <label for="sender_id">
      Sender
    </label>

    <!-- Input for sender_id start -->
    <%= select_tag(:sender_id, options_from_collection_for_select(User.all, :id, :email, @direct_message.sender_id), :class => "form-control") %>
    <!-- Input for sender_id end -->
  </div>
  <!-- Label and input for sender_id end -->

  <!-- Label and input for parent_id start -->
  <div class="form-group">
    <label for="parent_id">
      Parent
    </label>

    <!-- Input for parent_id start -->
    <%= select_tag(:parent_id, options_from_collection_for_select(User.all, :id, :email, @direct_message.parent_id), :class => "form-control") %>
    <!-- Input for parent_id end -->
  </div>
  <!-- Label and input for parent_id end -->

  <!-- Label and input for body start -->
  <div class="form-group">
    <label for="body">
      Body
    </label>

    <!-- Input for body start -->
    <textarea id="body" name="body" class="form-control" rows="3"></textarea>
    <!-- Input for body end -->
  </div>
  <!-- Label and input for body end -->

  <button class="btn btn-block btn-outline-secondary">
    Create direct message
  </button>
</form>

<hr>

<a href="/direct_messages">
  Go back
</a>
