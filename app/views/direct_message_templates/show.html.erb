<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Direct message #<%= @direct_message.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/direct_messages" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <% if current_user == @direct_message.sender %>
          <a href="/direct_messages/<%= @direct_message.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit direct_message
          </a>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @direct_message.sender %>
          <a href="/delete_direct_message/<%= @direct_message.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete direct_message
          </a>
        <% end %>
      </div>
    </div>

    <dl>
      <dt>
        Sender
      </dt>
      <dd>
        <% if @direct_message.sender.present? %>
          <a href="/users/<%= @direct_message.sender_id %>">
            <%= @direct_message.sender.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Parent
      </dt>
      <dd>
        <% if @direct_message.parent.present? %>
          <a href="/users/<%= @direct_message.parent_id %>">
            <%= @direct_message.parent.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Body
      </dt>
      <dd>
        <%= @direct_message.body %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@direct_message.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@direct_message.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

