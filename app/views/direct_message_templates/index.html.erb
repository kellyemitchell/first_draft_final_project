<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All direct messages
    </h1>

    <a href="/direct_messages/new" class="btn btn-block btn-outline-secondary">
      Add a new direct message
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "direct_message_templates/direct_messages_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Sender
        </th>

        <th>
          Parent
        </th>

        <th>
          Body
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @direct_messages.each do |direct_message| %>
      <tr>
        <td>
          <%= direct_message.id %>
        </td>

        <td>
          <% if direct_message.sender.present? %>
            <a href="/users/<%= direct_message.sender.id %>">
              <%= direct_message.sender.email %>
            </a>
          <% end %>
        </td>

        <td>
          <% if direct_message.parent.present? %>
            <a href="/users/<%= direct_message.parent.id %>">
              <%= direct_message.parent.email %>
            </a>
          <% end %>
        </td>

        <td>
          <%= direct_message.body %>
        </td>

        <td>
          <%= time_ago_in_words(direct_message.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(direct_message.updated_at) %> ago
        </td>

        <td>
          <a href="/direct_messages/<%= direct_message.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @direct_messages, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
