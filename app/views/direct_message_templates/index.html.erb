<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All direct messages
    </h1>

    <a href="/direct_messages/new" class="btn btn-block btn-outline-secondary">
      Add a new direct message
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Sender
        </th>

        <th>
          Parent
        </th>

        <th>
          Body
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @direct_messages.each do |direct_message| %>
      <tr>
        <!-- Display direct_message.id start -->
        <td>
          <%= direct_message.id %>
        </td>
        <!-- Display direct_message.id end -->

        <!-- Display direct_message.sender_id start -->
        <td>
          <%= direct_message.sender_id %>
        </td>
        <!-- Display direct_message.sender_id end -->

        <!-- Display direct_message.parent_id start -->
        <td>
          <%= direct_message.parent_id %>
        </td>
        <!-- Display direct_message.parent_id end -->

        <!-- Display direct_message.body start -->
        <td>
          <%= direct_message.body %>
        </td>
        <!-- Display direct_message.body end -->

        <!-- Display direct_message.created_at start -->
        <td>
          <%= time_ago_in_words(direct_message.created_at) %> ago
        </td>
        <!-- Display direct_message.created_at end -->

        <!-- Display direct_message.updated_at start -->
        <td>
          <%= time_ago_in_words(direct_message.updated_at) %> ago
        </td>
        <!-- Display direct_message.updated_at end -->

        <td>
          <a href="/direct_messages/<%= direct_message.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
