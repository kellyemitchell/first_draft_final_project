<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Provider update #<%= @provider_update.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/provider_updates" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/provider_updates/<%= @provider_update.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit provider update
        </a>
      </div>

      <div class="col">
        <a href="/delete_provider_update/<%= @provider_update.id %>" class="btn btn-block btn-outline-secondary">
          Delete provider update
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Breakfast
      </dt>
      <dd>
        <%= @provider_update.breakfast %>
      </dd>

      <dt>
        Lunch
      </dt>
      <dd>
        <%= @provider_update.lunch %>
      </dd>

      <dt>
        Snacks
      </dt>
      <dd>
        <%= @provider_update.snacks %>
      </dd>

      <dt>
        Activities
      </dt>
      <dd>
        <%= @provider_update.activities %>
      </dd>

      <dt>
        User
      </dt>
      <dd>
        <% if @provider_update.user.present? %>
          <a href="/users/<%= @provider_update.user_id %>">
            <%= @provider_update.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Date
      </dt>
      <dd>
        <%= @provider_update.date %>
      </dd>

      <dt>
        Reminders
      </dt>
      <dd>
        <%= @provider_update.reminders %>
      </dd>

      <dt>
        Venue
      </dt>
      <dd>
        <% if @provider_update.venue.present? %>
          <a href="/venues/<%= @provider_update.venue_id %>">
            <%= @provider_update.venue.name %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@provider_update.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@provider_update.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

