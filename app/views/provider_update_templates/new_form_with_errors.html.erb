<!-- Validation failure messages -->
<% if @provider_update.present? %>
  <% if @provider_update.errors.any? %>
    <% @provider_update.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

